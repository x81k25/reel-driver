# GPU-enabled base training image using NVIDIA CUDA runtime
FROM nvidia/cuda:12.4.0-runtime-ubuntu22.04

# Prevent interactive prompts during build
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=Etc/UTC

# Set working directory
WORKDIR /app

# Install system dependencies and Python 3.12
RUN apt-get update && apt-get install -y --no-install-recommends \
    software-properties-common \
    build-essential \
    libpq-dev \
    curl \
    && add-apt-repository -y ppa:deadsnakes/ppa \
    && apt-get update \
    && apt-get install -y --no-install-recommends python3.12 python3.12-venv python3.12-dev \
    && rm -rf /var/lib/apt/lists/* \
    && curl -LsSf https://astral.sh/uv/install.sh | sh

# Set Python 3.12 as default
RUN update-alternatives --install /usr/bin/python3 python3 /usr/bin/python3.12 1 \
    && update-alternatives --install /usr/bin/python python /usr/bin/python3.12 1

# Add uv to PATH
ENV PATH="/root/.local/bin:$PATH"

# Copy project files for dependency installation
COPY pyproject.toml .
COPY uv.lock .

# Install core Python dependencies using uv
RUN /root/.local/bin/uv sync --frozen --no-dev

# Copy source code
COPY src/ src/

# Set Python path to use uv's virtual environment
ENV PYTHONPATH=/app/.venv/lib/python3.12/site-packages:/app
ENV PATH="/app/.venv/bin:$PATH"

# Set default environment variables
ENV LOCAL_DEVELOPMENT=false
ENV USE_GPU=true

# NVIDIA environment variables for GPU access
ENV NVIDIA_VISIBLE_DEVICES=all
ENV NVIDIA_DRIVER_CAPABILITIES=compute,utility
